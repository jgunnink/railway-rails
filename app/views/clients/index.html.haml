.ui.row.page-header
  .column
    %h1.ui.left.floated.header= current_page_title
    - if can?(:new, Client)
      .ui.right.floated.page.header
        = link_to new_client_path, class: "ui primary button" do
          %i.add.user.icon
          Add new client

.ui.row
  .column
    - if params[:q].present? || @clients.present?
      = search_form_for @ransack_query, method: :get, url: request.path, wrapper: "semantic_ui", html: { class: "search-form"} do |s|
        = s.input :name, wrapper_html: {class: "ui action left icon input"}, label_html: {class: "visually-hidden"}, required: false, label: "Search by name or email" do
          %i.search.icon
          = s.input_field :name, placeholder: "Search by name", as: :string
          = s.button :button, "Search"

    - if @clients.present?
      %table.ui.fixed.striped.table
        %thead
          %tr
            %th= sort_link(@ransack_query, :name, "Name")
            %th Email
            %th Contact Name
            %th Contact Phone
            - if can?(:manage, User)
              %th.right.aligned.actions Actions
        %tbody
          - @clients.each do |client|
            %tr
              %td= client.name
              %td= client.email
              %td= client.contact_name
              %td= client.contact_phone
              - if can?(:manage, client)
                %td.right.aligned.actions
                  - if can?(:edit, client)
                    = link_to edit_client_path(client), class: "ui icon tiny compact button" do
                      %i.pencil.icon
                      Edit
                  - if can?(:destroy, client)
                    = link_to_archive_resource(delete_path_for_client(client), client.full_name)
      = paginate @clients

    - elsif params[:q].present?
      %p
        No clients matched your search.
        = link_to "Show all clients.", request.path
    - else
      %p
        There are no clients.
        = link_to "Create a client.", new_path_for_client
